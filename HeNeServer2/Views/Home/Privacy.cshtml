@{
    ViewData["Title"] = "Состояние сервера";
}
<h1>@ViewData["Title"]</h1>

<style>
    .progress-bar 
    {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 175px;
        height: 175px;
        border-radius: 50%;
        background: radial-gradient(closest-side, white 79%, transparent 80% 100%), conic-gradient( #d5a4f6 @ViewBag.Vol, #e8ddef 0);
        margin-right: 15px;
    }

    .progress-bar::before {
        content: "@ViewBag.Vol";
        color: #3f3f3f;
        font-size: 40px;
        font-weight: 600;
    }

    .Text{
        display: flex;
        flex-direction: row;
        color: #3f3f3f;
        font-size: 20px;
        font-weight: 600;
    }
</style>

<p></p>
<div class="Text">
    <div class="progress-bar"></div>
    <div>
        <p>Емкость:  @ViewBag.Total.ToString("0.#") ГБ</p>
        <p>Доступно: @ViewBag.FreeSpace.ToString("0.#") ГБ</p>
    </div>
</div>
